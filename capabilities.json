{
    "dataRoles": [
        {
            "displayName": "Details",
            "name": "category",
            "kind": "Grouping"
        },
        {
            "displayName": "X Axis",
            "name": "xAxis",
            "kind": "Measure"
        },
        {
            "displayName": "Y Axis",
            "name": "yAxis",
            "kind": "Measure"
        },
        {
            "displayName": "Point Saturation",
            "name": "measure",
            "kind": "Measure"
        }
    ],
    "objects": {
        "dataPoint": {
            "displayName": "Hexbin scatterplot options",
            "properties": {
                "binColor": {
                    "displayName": "Bin color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "showHexbins": {
                    "displayName": "Show bins",
                    "type": {
                        "bool": true
                    }
                },
                "showHexbinLabels": {
                    "displayName": "Show bin labels",
                    "type": {
                        "bool": true
                    }
                },
                "dotColor": {
                    "displayName": "Point color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "showDots": {
                    "displayName": "Show points",
                    "type": {
                        "bool": true
                    }
                },
                "fillRule": {
                    "displayName": "Color saturation",
                    "type": {
                        "fill": {}
                    }
                },
                 "fontSize": {
                    "displayName": "Text Size",
                    "type": {
                        "formatting": {
                            "fontSize": true
                        }
                    }
                }
            }
        },
        "axes": {
            "displayName": "Axes options",
            "properties": {
                "showXAxis": {
                    "displayName": "Show X axis",
                    "type": {
                        "bool": true
                    }
                },
                "showYAxis": {
                    "displayName": "Show Y axis",
                    "type": {
                        "bool": true
                    }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "category": {
                        "min": 0,
                        "max": 1
                    },
                    "xAxis": {
                        "max": 1
                    },
                    "yAxis": {
                        "max": 1
                    },
                    "measure": {
                        "max": 1
                    }
                }
            ],
            "categorical": {
                "categories": {
                    "for": {
                        "in": "category"
                    },
                    "dataReductionAlgorithm": {
                        "top": {
                            "count":30000
                        }
                    }
                },
                "values": {
                    "select": [
                        {
                            "bind": {
                                "to": "xAxis"
                            }
                        },
                        {
                            "bind": {
                                "to": "yAxis"
                            }
                        },
                        {
                            "bind": {
                                "to": "measure"
                            }
                        }
                    ]
                }
            }
        }
    ]
}
