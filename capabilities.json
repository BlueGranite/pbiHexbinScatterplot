{
    "dataRoles": [
        {
            "displayName": "Details",
            "name": "category",
            "kind": "Grouping"
        },
        {
            "displayName": "X Axis",
            "name": "xAxis",
            "kind": "Measure"
        },
        {
            "displayName": "Y Axis",
            "name": "yAxis",
            "kind": "Measure"
        },
        {
            "displayName": "Point Saturation",
            "name": "measure",
            "kind": "Measure"
        }
    ],
    "objects": {
        "dataPoint": {
            "displayName": "Hexbin scatterplot options",
            "properties": {
                "binColor": {
                    "displayName": "Bin color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "binRadius": {
                    "displayName": "Bin radius",
                    "type": {
                        "enumeration": [
                            {"value": "10", "displayName": "10"},
                            {"value": "20", "displayName": "20"},
                            {"value": "30", "displayName": "30"},
                            {"value": "40", "displayName": "40"},
                            {"value": "50", "displayName": "50"}
                        ]
                    }
                },
                "showHexbins": {
                    "displayName": "Show bins",
                    "type": {
                        "bool": true
                    }
                },
                "showHexbinLabels": {
                    "displayName": "Show bin stats on hover",
                    "type": {
                        "bool": true
                    }
                },
                "binOutline": {
                    "displayName": "Bin outline",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "dotColor": {
                    "displayName": "Point color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "showDots": {
                    "displayName": "Show points",
                    "type": {
                        "bool": true
                    }
                },
                "fillRule": {
                    "displayName": "Color saturation",
                    "type": {
                        "fill": {}
                    }
                },
                 "fontSize": {
                    "displayName": "Text Size",
                    "type": {
                        "formatting": {
                            "fontSize": true
                        }
                    }
                }
            }
        },
        "axes": {
            "displayName": "Axes options",
            "properties": {
                "showXAxis": {
                    "displayName": "Show X axis",
                    "type": {
                        "bool": true
                    }
                },
                "showXTitle": {
                    "displayName": "X title",
                    "type": {
                        "bool": true
                    }
                },
                "showYAxis": {
                    "displayName": "Show Y axis",
                    "type": {
                        "bool": true
                    }
                },
                "showYTitle": {
                    "displayName": "Y title",
                    "type": {
                        "bool": true
                    }
                },
                "originZeroZero": {
                    "displayName": "Origin at (0,0)",
                    "type": {
                        "bool": true
                    }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "category": {
                        "min": 0,
                        "max": 1
                    },
                    "xAxis": {
                        "max": 1
                    },
                    "yAxis": {
                        "max": 1
                    },
                    "measure": {
                        "max": 1
                    }
                }
            ],
            "categorical": {
                "categories": {
                    "for": {
                        "in": "category"
                    },
                    "dataReductionAlgorithm": {
                        "top": {
                            "count":30000
                        }
                    }
                },
                "values": {
                    "select": [
                        {
                            "bind": {
                                "to": "xAxis"
                            }
                        },
                        {
                            "bind": {
                                "to": "yAxis"
                            }
                        },
                        {
                            "bind": {
                                "to": "measure"
                            }
                        }
                    ]
                }
            }
        }
    ]
}
